<script
  type="application/json"
  data-section-type="static-page"
  data-section-id="{{ section.id }}"
></script>


<section class="standard-page__wrapper">
  <div class="standard-page standard-page--width-{{- section.settings.page_width -}}">
    <div class="standard-page__header">
      <h1>{{ page.title }}</h1>
    </div>

    <div class="standard-page__content" data-rich-text-area>
      {{ page.content }}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Page",
  "settings": [
    {
      "type": "select",
      "id": "page_width",
      "label": "Page width",
      "options": [
        {
          "label": "Regular",
          "value": "regular"
        },
        {
          "label": "Wide",
          "value": "wide"
        },
        {
          "label": "Full width",
          "value": "full"
        }
      ],
      "default": "regular"
    }
  ]
}

{% endschema %}